doctype html
head
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  title Login
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN' crossorigin='anonymous')
  
.container-sm
  .row
    h1.text-center Login
    form(method='post' action='/user/login')
      .mb-3
        label.form-label(for='exampleInputEmail1') Username
        input#exampleInputEmail1.form-control(type='text' name='username')
      .mb-3
        label.form-label(for='exampleInputPassword1') Password
        input#exampleInputPassword1.form-control(type='password' name='password')
      button.btn.btn-primary(type='submit') Submit
